<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="10dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:text="RESUME MAKER"
        android:textColor="#114084"
        android:textSize="22dp"
        android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@drawable/string"
        android:gravity="center">
     <RelativeLayout

        android:layout_width="360dp"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#4181C8"
            android:text="Start your resume with us and make your work easy!"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/str"
        android:layout_width="128dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Start"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textSize="22dp" />
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="90dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:text="Resume Tips"
        android:textColor="#114084"
        android:textSize="22dp"
        android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/string"
        android:gravity="center">

        <TextView
            android:id="@+id/rt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Basic info Section
                          Getting in tuouch with you
                          1min read"
            android:textColor="#769FCD"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/string"
        android:gravity="center">

        <TextView
            android:id="@+id/rt2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Contact Section Understanding yourprofessional personality
                          1min read"
            android:textColor="#769FCD"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/string"
        android:gravity="center">

        <TextView
            android:id="@+id/rt3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Education Section Giving an overview of your education
                               1min read"
            android:textColor="#769FCD"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/string"
        android:gravity="center">

        <TextView
            android:id="@+id/rt4"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Experience Section Giving an overview of
what you have done
                     1min read"
            android:textColor="#769FCD"
            android:textSize="20dp" />
    </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="Resume Examples"
            android:textColor="#114084"
            android:textSize="22dp"
            android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="348dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="294dp"
                android:layout_height="348dp"
                android:src="@drawable/img_1"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="294dp"
                android:layout_height="348dp"
                android:src="@drawable/img_3"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="294dp"
                android:layout_height="348dp"
                android:src="@drawable/img_2"
                android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>